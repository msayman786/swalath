<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:text="ربنا لك الحمد مل ء السموات ومل ء الارض ومل ء ما شئت من شئ بعد" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rabana walaka Al-Hamd, Mil’a Asamawati Wal ‘Ard, Wa Mil’a Ma Shi’ta Min
Shay’in Ba’d
" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Lord, praise be for You Alone, praises plentiful and blessed as to fill the heavens, the earth, what in between, and fill that which will please You besides them." />

</LinearLayout></ScrollView>